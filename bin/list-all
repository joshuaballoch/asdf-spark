#!/usr/bin/env bash
# taken and refactored from https://github.com/asdf-vm/asdf-elixir/blob/master/bin/list-all#L17

# stolen from https://github.com/rbenv/ruby-build/pull/631/files#diff-fdcfb8a18714b33b07529b7d02b54f1dR942
function sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' | \
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

versions=$(eval curl -s https://spark.apache.org/releases/ | grep -oE "spark-release-[0-9]*-[0-9]*-[0-9]*.html" | sed 's/spark-release-\(.*\).html/\1/g' | sed 's/-/./g' | sort_versions)
echo $versions
